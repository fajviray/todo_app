form = $("#project_form");
button = $('#add_project');
list = $("#projectList");

if(window.showForm){
	form.hide();
	list.show();
	window.showForm = false;
	button.html("Add Project");
	button.removeClass("btn-danger").addClass("btn-primary");
} else {
	form.html("<%= j (render 'form') %>");
	form.show();
	list.hide();
	window.showForm = true;
	button.html("Close")
	button.removeClass("btn-primary").addClass("btn-danger");
}