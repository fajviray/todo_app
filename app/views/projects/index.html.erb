<div id="submain" class="container">
	<div class="container">

	<div class="row">
		<div class="col-xs-2">
			<%= link_to new_project_path, remote: true do %>
				<button class="btn btn-primary" id="add_project"> <span class="glyphicon glyphicon-pencil"></span>Add Project </button>
			<% end %>
		</div>
		<div id="project_form" class="col-md-10"></div>
		<div id="projectList" class="col-md-10">
			<table class='table table-striped'>
				<tbody id="project_container">
				<% @projects.each do |p| %>
				<tr id="row_<%=p.id%>">
					<td width="2px">
						<%= link_to project_path(p), remote: true, method: :delete do %>
							<button class="btn btn-danger">Delete</button>
						<% end %>
					</td>
					<td width="2px">
						<%= link_to edit_project_path(p), remote: true do %>
					    <button class="btn btn-primary buttonDetail">
					    	<span class="glyphicon glyphicon-folder-open"></span>
					    </button>
						<% end %>
					</td>
					<td><div id="id_<%=p.id%>"> <h4><%= p.title %></h4> </div></td>
			  </tr>
				<% end %>
				</tbody>
			</table>
		</div>
	</div>

	</div>
</div>


<div id="detail_content" class="container">
	<%= link_to 'Return', root_path, remote: true, class: "btn btn-default returnList" %>

	<div id="project_updform"></div>

	<div id="task_container">
		<div id="add_task"></div>
		<table id="taskList" class="table table-striped">
			<thead><tr><td>ToDos</td></tr></thead>
			<tbody id="task_content">
			</tbody>
		</table>
	</div>

	<div id="task-modal" class="modal fade" role="dialog"></div>
</div>